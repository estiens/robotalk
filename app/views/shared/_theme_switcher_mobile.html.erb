<div class="gap-2 grid grid-cols-2" data-controller="theme">
  <button class="flex justify-center items-center gap-2 hover:bg-base-200 p-3 border border-base-300 rounded-lg transition-colors theme-item-mobile" 
          data-action="click->theme#setSpecificTheme" 
          data-theme="light">
    <div class="bg-base-100 border border-base-content/20 rounded-full w-3 h-3"></div>
    <span class="font-medium text-sm">Light</span>
  </button>
  
  <button class="flex justify-center items-center gap-2 hover:bg-base-200 p-3 border border-base-300 rounded-lg transition-colors theme-item-mobile" 
          data-action="click->theme#setSpecificTheme" 
          data-theme="dark">
    <div class="bg-neutral rounded-full w-3 h-3"></div>
    <span class="font-medium text-sm">Dark</span>
  </button>
  
  <button class="flex justify-center items-center gap-2 hover:bg-base-200 p-3 border border-base-300 rounded-lg transition-colors theme-item-mobile" 
          data-action="click->theme#setSpecificTheme" 
          data-theme="synthwave">
    <div class="bg-gradient-to-br from-pink-500 to-purple-600 rounded-full w-3 h-3"></div>
    <span class="font-medium text-sm">Synthwave</span>
  </button>
  
  <button class="flex justify-center items-center gap-2 hover:bg-base-200 p-3 border border-base-300 rounded-lg transition-colors theme-item-mobile" 
          data-action="click->theme#setSpecificTheme" 
          data-theme="cyberpunk">
    <div class="bg-gradient-to-br from-yellow-400 to-pink-500 rounded-full w-3 h-3"></div>
    <span class="font-medium text-sm">Cyberpunk</span>
  </button>
  
  <button class="flex justify-center items-center gap-2 hover:bg-base-200 p-3 border border-base-300 rounded-lg transition-colors theme-item-mobile" 
          data-action="click->theme#setSpecificTheme" 
          data-theme="valentine">
    <div class="bg-gradient-to-br from-pink-400 to-pink-600 rounded-full w-3 h-3"></div>
    <span class="font-medium text-sm">Valentine</span>
  </button>
  
  <button class="flex justify-center items-center gap-2 hover:bg-base-200 p-3 border border-base-300 rounded-lg transition-colors theme-item-mobile" 
          data-action="click->theme#setSpecificTheme" 
          data-theme="forest">
    <div class="bg-gradient-to-br from-green-600 to-green-800 rounded-full w-3 h-3"></div>
    <span class="font-medium text-sm">Forest</span>
  </button>
</div> 