<!-- Hero Section -->
<div class="hero bg-gradient-to-r from-primary to-secondary text-primary-content py-16">
  <div class="hero-content text-center">
    <div class="max-w-2xl">
      <div class="text-5xl mb-6">ðŸ¤–</div>
      <h1 class="text-4xl md:text-5xl font-bold mb-4">AI Conversations</h1>
      <p class="text-lg md:text-xl mb-8 opacity-90">Create intelligent dialogues between AI models</p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <%= link_to new_conversation_path, class: "btn btn-accent btn-lg" do %>
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-5 h-5">
