    </div>
  </div>
</div>

<!-- Stats Section -->
<div class="bg-base-200 py-12">
  <div class="container mx-auto px-4 max-w-6xl">
    <div class="stats stats-vertical lg:stats-horizontal shadow-lg w-full bg-base-100">
      <div class="stat place-items-center">
        <div class="stat-figure text-primary">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-8 h-8">
            <path stroke-linecap="round" stroke-linejoin="round" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
          </svg>
        </div>
        <div class="stat-title">Total Conversations</div>
        <div class="stat-value text-primary"><%= @conversations.count %></div>
        <div class="stat-desc">All time</div>
      </div>
      
      <div class="stat place-items-center">
        <div class="stat-figure text-secondary">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-8 h-8">
            <path stroke-linecap="round" stroke-linejoin="round" d="M5.25 5.653c0-.856.917-1.398 1.667-.986l11.54 6.348a1.125 1.125 0 010 1.971l-11.54 6.347a1.125 1.125 0 01-1.667-.985V5.653z" />
          </svg>
        </div>
        <div class="stat-title">Currently Active</div>
        <div class="stat-value text-secondary"><%= @conversations.generating.count + @conversations.interactive.count %></div>
        <div class="stat-desc">In progress</div>
      </div>
      
      <div class="stat place-items-center">
        <div class="stat-figure text-accent">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-8 h-8">
            <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
        </div>
        <div class="stat-title">Completed</div>
        <div class="stat-value text-accent"><%= @conversations.complete.count %></div>
        <div class="stat-desc">Finished</div>
      </div>
    </div>
  </div>
</div>

<!-- Content Area -->
<div class="container mx-auto px-4 py-12 max-w-7xl">
  <% if @conversations.any? %>
    <!-- Section Header -->
    <div class="flex flex-col lg:flex-row justify-between items-start lg:items-center gap-6 mb-12">
      <div>
        <h2 class="text-3xl lg:text-4xl font-bold mb-2">Recent Conversations</h2>
        <p class="text-base-content/70 text-lg">Manage and explore your AI dialogues</p>
      </div>
      
      <!-- Filter/Sort Controls -->
      <div class="flex items-center gap-4">
        <div class="dropdown dropdown-end">
          <div tabindex="0" role="button" class="btn btn-outline">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4">
              <path stroke-linecap="round" stroke-linejoin="round" d="M3 4.5h14.25M3 9h9.75M3 13.5h9.75m4.5-4.5v12m0 0l-3.75-3.75M16.5 16.5L20.25 12.75" />
            </svg>
            Sort & Filter
          </div>
          <ul tabindex="0" class="dropdown-content menu bg-base-100 rounded-box z-[1] w-56 p-2 shadow-lg">
            <li><a>Newest First</a></li>
            <li><a>Oldest First</a></li>
            <li><a>Most Active</a></li>
            <li><a>Recently Updated</a></li>
          </ul>
        </div>
        
        <div class="badge badge-primary badge-lg">
          <%= pluralize(@conversations.count, 'conversation') %>
        </div>
      </div>
    </div>

    <!-- Conversations Grid -->
    <div class="grid gap-8 md:grid-cols-2 xl:grid-cols-3">
      <% @conversations.each do |conversation| %>
        <%= render 'conversation_card', conversation: conversation %>
      <% end %>
    </div>
  <% else %>
    <!-- Empty State -->
    <div class="hero min-h-[60vh]">
      <div class="hero-content text-center">
        <div class="max-w-lg">
          <div class="text-8xl mb-8 animate-bounce">ðŸ’¬</div>
          <h2 class="text-4xl font-bold mb-6">No conversations yet</h2>
          <p class="text-xl mb-10 leading-relaxed text-base-content/80">
            Create your first conversation between AI models and watch them discuss, debate, and collaborate on topics you choose.
          </p>
          
          <%= link_to new_conversation_path, class: "btn btn-primary btn-lg gap-3 mb-6" do %>
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-6 h-6">
              <path stroke-linecap="round" stroke-linejoin="round" d="M12 4.5v15m7.5-7.5h-15" />
            </svg>
            Create Your First Conversation
          <% end %>
          
          <div class="text-base-content/60">
            or explore <%= link_to "available AI models", models_path, class: "link link-primary font-semibold" %> first
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
